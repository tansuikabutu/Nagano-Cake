<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2>注文確認画面</h2>
    </div>
  </div>

<%= form_with(model: @order, local: true) do |f| %>
<!-- カートの商品一覧 -->
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-bordered">
        <tr>
          <th style="width:200px;">商品名</th>
          <th style="width:100px;">単価（税込）</th>
          <th style="width:100px;">数量</th>
          <th style="width:100px;">小計</th>
        </tr>
        <% sum_all = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to item_path(cart_item.item) do %>
            <%= attachment_image_tag(cart_item.item, :image, size: "50x50", fallback: "no_img.jpg") %>
            <% end %>
          <%= link_to item_path(cart_item.item) do %>
          <%= cart_item.item.name %>
          <% end %>
          </td>
          <td>
          <!-- 消費税込みの金額 -->
          <%= price_include_tax(cart_item.item.price) %>
          </td>
          <td>
            <%= cart_item.quantity %>
          </td>
          <td>
            <%= sum_item = price_include_tax(cart_item.item.price).to_i * cart_item.quantity %>円
            <% sum_all += sum_item %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="col-xs-4">
      <table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td><%= 800 %>円</td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= sum_all %>円</td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><% billling_amount = sum_all + 800 %>
              <%= billling_amount.to_i %>円
          </td>
        </tr>
      </table>
    </div>

    <div class="row">
      <div class="col-lg-4">
          <table>
               <tr>
                 <h3>支払方法</h3>
                 <td><%= @order.is_payment_method %></td>
               </tr>
          </table>
        <br>

        <table>
           <tr>
             <h3>お届け先</h3>
           </tr>
             <td><%= @order.postcode %></td>
             <tr><td><%= @order.address %></td></tr>
             <tr><td><%= @order.name %></td></tr>
        </table>
      </div>
    </div>

    <%= f.hidden_field :member_id, :value => current_member.id %>
    <%= f.hidden_field :postcode, :value => "#{@order.postcode}" %>
    <%= f.hidden_field :address, :value => "#{@order.address}" %>
    <%= f.hidden_field :name, :value => "#{@order.name}" %>
    <%= f.hidden_field :postage, :value => 800 %>
    <%= f.hidden_field :total_price, :value => sum_all %>
    <%= f.hidden_field :is_payment_method, :value => @order.is_payment_method %>


  </div>

  <br>
  <br>
  <div class="row">
    <div class="col-lg-10">
      <%= f.submit "購入を確定する", class: "btn btn-danger btn-lg" %>
    </div>
  </div>

　<% end %>
</div>