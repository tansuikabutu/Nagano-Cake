<!-- 注文商品の名前を修正する -->

<div class="container">
	<div class="row">
		<div class="col-xs-12">

	<h3>注文履歴一覧</h3>
			<table class="table table-hover table-bordered">
				<thead class="thead-light">
					<tr>
						<th style="width:100px;">注文日 </th>
						<th style="width:250px;">配送先 </th>
						<th style="width:170px;">注文商品 </th>
						<th style="width:80px;">支払金額 </th>
						<th style="width:100px;">ステータス </th>
						<th style="width:100px;">注文詳細</th>
					</tr>
				</thead>

				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%=order.created_at.strftime('%Y/%m/%d')%></td>
						<td><%=order.postcode %><br><%=order.address %><br><%= order.name %></td>
						<!-- ここがおかしい -->
						<td><% order.order_items.each do |order_item|%>
						<%= order_item.item.name %>
                        <% end %>
						</td>
						<td><%=order.total_price + 800 %></td>
						<td><%=order.order_status %></td>
						<td><%= link_to "表示する", order_path(order), class: "btn btn-primary " %></td>
					</tr>
						<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>
