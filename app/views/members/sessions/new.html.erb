<div class="container-mf">
  <div class="row">
    <div class="col-xs-6">
      <h2>会員の方はこちらからログイン</h2>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>



      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3 pb-1"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control offset-6 col-6" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3 pb-1"%><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-6 col-6" %>
      </div>


      <div>
        <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>
      </div>



      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-outline-danger btn-block mt-5"  %>
      </div>
      <% end %>

      <div class="space">
        <h4>登録がお済みでない方</h4>
        <h4><%= link_to "こちら", new_member_registration_path  %>から新規登録してください。</h4>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>


