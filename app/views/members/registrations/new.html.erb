

<div class="index-container" style="width:40%; margin: 50px auto;">

  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "members/shared/error_messages", resource: resource %>


<table class="table table-bordered">
    <tr>
      <th>性</th>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control offset-6 col-6" %></td>
   </tr>

     <tr>
      <th>名</th>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control offset-6 col-6" %></td>
    <tr>
    <br>


    <tr>
      <th>セイ</th>
      <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control offset-6 col-6" %></td>
   </tr>


    <tr>
      <th>メイ</th>
      <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control offset-6 col-6" %></td>
   </tr>



  <tr>
    <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-6 col-6" %></td>
  </tr>


  <tr>
      <th>郵便番号</th>
     <td><%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "form-control offset-6 col-6" %></td>
  </tr>


   <tr>
      <th>住所 </th>
     <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control offset-6 col-6" %></td>
   </tr>


   <tr>
      <th>電話番号(ハイフンなし)</th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control offset-6 col-6" %></td>
   </tr>




    <tr>
      <th>パスワード(6文字以上)</th>
     <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control offset-6 col-6" %></td>
    </tr>

    <tr>
      <th>パスワード確認用</th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-6 col-6" %></td>
    </tr>
    </table>

    <dib class="row">
      <%= f.submit "新規登録", class: "btn btn-primary btn-block mt-5" %>
    </dib>
   <% end %>


  <br>
    <div class="space">
      <h4>すでに登録済みの方</h4>
      <h5><%= link_to 'こちら', new_member_session_path  %>からログインしてください</h5>
    </div>

</div>
<%= render 'layouts/footer' %>