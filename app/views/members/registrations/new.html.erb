<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "members/shared/error_messages", resource: resource %>



  <div class="field">
    <label>性</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <label>名</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  <br>



 <div class="field">
    <label>セイ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
 </div>


<div class="field">
    <label>メイ</label>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
</div>
<br>




<div class="field">
  <lavel>メールアドレス</lavel>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>


<div class="field">
    <lavel>郵便番号</lavel>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
</div>


 <div class="field">
    <lavel>住所 </lavel>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
 </div>


<div class="field">
    <lavel>電話番号(ハイフンなし)</lavel>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
 </div>
  <br>



  <div class="field">
    <label>パスワード(6文字以上)</label>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード確認用</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
 <% end %>

<br>
  <div class="space">
    <h4>すでに登録済みの方</h4>
    <h5><%= link_to 'こちら', new_member_session_path  %>からログインしてください</h5>
  </div>
