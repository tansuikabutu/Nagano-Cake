
<!-- 注文一覧画面 -->
<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	    <tr class="active">
	      <th>購入日時</th>
	      <th>購入者</th>
	      <th>注文個数</th>
	      <th>注文ステータス</th>
	      <th></th>

        <% @orders.each do |order| %>
	    <tr>
	       <td><%= order.created_at.to_s(:datetime_jp) %></td>
	      <td><%= order.member.last_name %><%= order.member.first_name %></td>
          <td></td> <%# order.order_items.quantity %><!-- Nomethoderrorで注文個数が表示できない -->
	      <td><%= order.order_status %></td>
	      <td><%= link_to "注文詳細", admins_order_path(order), class:"btn btn-primary" %></td>
	    </tr>
      <% end %>
    </table>
</div>