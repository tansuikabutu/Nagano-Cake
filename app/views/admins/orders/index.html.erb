
<!-- 注文一覧画面 -->
<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	    <tr class="active">
	      <th>購入日時</th>
	      <th>購入者</th>
	      <th>注文</th>
	      <th>注文ステータス</th>

        <% @order.each do |order| %>
	    <tr>
	       <td><%= order.created_at %></td>
	      <td><%= order.member.last_name %><%= order.member.first_name %></td>
	      <td><%= order.order_status %></td>
	      <td><%= link_to "注文詳細", admins_order_path(order), class:"btn btn-primary" %></td>
	    </tr>
      <% end %>
    </table>
</div>