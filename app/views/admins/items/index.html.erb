<div class="container">
   <div class="row">
    <!-- ジャンル検索サイドバー -->
    

  <div class="col-xs-9">
    <h2><i class="fas fa-cookie-bite"></i> 商品一覧<span style="font-size:20px;">（全<%= @quantity %>件）</span></h2><br>

    <div class="text-right index-new"> <!-- ボタンを丸にしたい -->
    <%= link_to new_admins_item_path do %>
      <button type="button" class="btn btn-success btn-success btn-circle btn-lg">＋</button>
    <% end %>
    </div>

    <div class=item-table>
    <table class="table table-hover">
      <thead>
        <tr class="active"> <!-- active => 色をグレーに変更 -->
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admins_item_path(item) do %>
            <%= item.name %>
            <% end %></td>
          <td><%= "#{item.price}円" %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_status ? '販売中' : '売切れ' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div>
    <%= paginate @items %>
    </div>
</div>