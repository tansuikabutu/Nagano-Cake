<div class="container">
  <h2>商品詳細</h2><br>
  <div class="row">
    <!-- 画像選択欄 -->
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg"%><br>
    </div>

    <!-- 商品登録フォーム -->
    <div class="col-xs-8">
      <h4 style="margin-bottom: 30px;">商品名
        <%= @item.name %>
      </h4>

      <div style="display: flex;">
        <h4 style="margin: 0 30px 30px 0;">商品説明</h4>
        <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
          <%= @item.introduction %>
        </div>
      </div>

        <h4 style="margin-bottom: 30px;">ジャンル
          <%= @item.genre.name %>
        </h4>

        <h4 style="margin-bottom: 30px;">税込価格（税抜価格）
          <%= (@item.price*1.1).floor%> (<%= @item.price%>) 円
        </h4>

        <h4 style="margin-bottom: 30px;">販売ステータス
          <%= @item.is_status ? '販売中' : '売切れ' %>
        </h4>

        <%= button_to '編集する',edit_admins_item_url, method: :get ,class: "btn btn-primary ", style: "margin-left:70%;"%>
    </div>
  </div>
</div>